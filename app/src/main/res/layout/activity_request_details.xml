<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestDetails">

    <TextView
        android:id="@+id/Text_Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address :-"
        android:textSize="25sp"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/TextView_Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/Text_Address"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView_Address"
        android:id="@+id/Text_Problem"
        android:text="Problem"
        android:textSize="25sp"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/text_PcType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Text_Problem"
        android:layout_margin="10dp"
        android:text="PcType :-"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/TextView_PcType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_PcType"
        android:layout_alignParentStart="true"
        android:layout_marginStart="100dp"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/text_ProblemType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_PcType"
        android:layout_margin="10dp"
        android:text="Problem Type :-"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/TextView_ProblemType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView_PcType"
        android:layout_toEndOf="@+id/text_ProblemType"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/text_SpecifiedProblem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Specified Problem :-"
        android:layout_below="@+id/text_ProblemType"
        android:layout_margin="10dp"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/TextView_SpecifiedType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView_ProblemType"
        android:layout_toEndOf="@+id/text_SpecifiedProblem"
        android:layout_marginTop="25dp"
       android:textSize="20sp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:text="Accept Problem"
        android:textColor="#fff"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        />
</RelativeLayout>