<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RequestDetails">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#213970"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Text_Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Address :"
                android:textColor="#F49F1C"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/TextView_Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f49f1c"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Text_Problem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Problem"
                android:textColor="#f49f1c"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/text_PcType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="PcType :"
                android:textColor="#f49f1c"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextView_PcType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f49f1c"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_ProblemType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Problem Type :"
                android:textColor="#f49f1c"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextView_ProblemType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f49f1c"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_SpecifiedProblem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Specified Problem :"
                android:textColor="#f49f1c"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextView_SpecifiedType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f49f1c"
                android:textSize="20sp" />

            <Button
                android:id="@+id/Button_Accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#f49f1c"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:layout_marginTop="30dp"
                android:text="Accept Problem"
                android:textColor="#fff" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>