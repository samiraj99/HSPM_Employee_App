<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:gravity="center_horizontal"
                android:text="(Upload Photos of your workshop/Office/Shop)"
                android:textColor="#000"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/spinner_cars" />


            <ImageButton
                android:id="@+id/ShowImage"
                android:layout_width="223dp"
                android:layout_height="209dp"
                android:layout_below="@+id/spinner"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:background="#f7f4f4"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/browse" />

            <Button
                android:id="@+id/btnchoose"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ShowImage"
                android:layout_marginTop="20dp"
                android:background="@color/primary"
                android:padding="10dp"
                android:text="@string/choose_image"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/btnchoose"
                android:text="Size should be less than 250kb"
                android:textColor="#f40505" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="45dp"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btnUpload"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@color/primary"
                    android:padding="10dp"
                    android:text="Upload"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/btnNext"
                    android:layout_width="73dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="25dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/next_icon" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</ScrollView>
